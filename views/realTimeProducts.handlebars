      const li = document.createElement('li');
      li.classList.add('cart-item');
      li.innerHTML = `<span><strong>${item.nombre}</strong> x ${item.quantity}</span>`;
      cartList.appendChild(li);
    });
  });
</script>

</body>
</html>







