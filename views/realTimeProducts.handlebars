<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Gesti√≥n de productos en tiempo real</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: linear-gradient(135deg, #fdeef7, #e3f6ff);
      font-family: 'Segoe UI', sans-serif;
      padding: 2rem;
    }

    h2 {
      color: #b86b94;
      font-weight: bold;
      margin-bottom: 1rem;
    }

    .form-control, .btn {
      border-radius: 1rem;
    }

    .product-item, .cart-item {
      background-color: #fff6fa;
      border: 1px solid #f3cfe5;
      border-radius: 10px;
      padding: 0.5rem 1rem;
      margin-bottom: 0.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .btn-agregar {
      background-color: #f497c4;
      color: white;
    }

    .btn-agregar:hover {
      background-color: #e07aad;
    }

    .btn-accion {
      margin-left: 0.5rem;
    }

    .alert-box {
      display: none;
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>

<div class="container">
  <h2 class="text-center mb-4">
    <img src="https://i.pinimg.com/736x/ad/01/ce/ad01ce6b0e351fb94b53a1592321df42.jpg" width="40" style="border-radius: 50%;" />
    Productos en tiempo real
  </h2>

  <!-- Formulario -->
  <form id="productForm" class="row g-3 justify-content-center mb-4">
    <div class="col-md-4">
      <input type="text" name="nombre" placeholder="Nombre del producto" class="form-control" required />
    </div>
    <div class="col-md-3">
      <input type="number" name="precio" placeholder="Precio" class="form-control" required />
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-agregar w-100">Agregar</button>
    </div>
  </form>

  <!-- Alerta -->
  <div id="alertContainer" class="alert-box text-center">
    <div class="alert alert-success d-inline-block px-4 py-2 rounded-pill" role="alert"></div>
  </div>

  <!-- Grilla de productos y carrito -->
  <div class="row">
    <!-- Productos disponibles -->
    <div class="col-md-6">
      <h4>üßÅ Productos disponibles</h4>
      <ul id="productList" class="list-unstyled"></ul>
    </div>

    <!-- Carrito -->
    <div class="col-md-6">
  <h4>üõí Carrito</h4>
  <ul id="cartList" class="list-unstyled"></ul>
  <p id="cartTotal" class="mt-3 fw-bold text-end"></p>
</div>


<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();
  const form = document.getElementById('productForm');
  const productList = document.getElementById('productList');
  const cartList = document.getElementById('cartList');
  const alertContainer = document.getElementById('alertContainer');
  const alertBox = alertContainer.querySelector('.alert');

  function mostrarAlerta(msg, fondo = '#d8f3dc', color = '#2d6a4f') {
    alertBox.textContent = msg;
    alertBox.style.backgroundColor = fondo;
    alertBox.style.color = color;
    alertContainer.style.display = 'block';
    setTimeout(() => alertContainer.style.display = 'none', 2500);
  }

  form.addEventListener('submit', e => {
    e.preventDefault();
    const nombre = form.nombre.value.trim();
    const precio = parseFloat(form.precio.value);
    if (!nombre || isNaN(precio) || precio <= 0) {
      alert("Por favor ingres√° un nombre y precio v√°lidos.");
      return;
    }
    socket.emit('nuevoProducto', { nombre, precio });
    form.reset();
  });

  function eliminarProducto(id) {
    socket.emit('eliminarProducto', id);
    mostrarAlerta("¬°Producto eliminado!", "#ffe5e9", "#842029");
  }

  function agregarAlCarrito(id) {
    socket.emit('agregarAlCarrito', id);
    mostrarAlerta("Producto agregado al carrito üõí");
  }

  socket.on('carritoActualizado', carrito => {
  cartList.innerHTML = '';
  carrito.forEach(item => {
    const li = document.createElement('li');
    li.classList.add('cart-item');
    li.innerHTML = `<span><strong>${item.nombre}</strong> x ${item.quantity}</span>`;
    cartList.appendChild(li);
  });
});


